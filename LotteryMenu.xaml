<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Hit The Lottery" Height="1000" Width="1000">
    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="371*"/>
            <ColumnDefinition Width="82*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Horizontal" Height="35" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,-0.4,0" >
            <Button Content="Single Random" MinWidth ="100" Click="BtnClickP1"/>
            <Button Content="Multiple Random" MinWidth ="100" Margin="10,0,0,0" Click="BtnClickP2"/>
        </StackPanel>
        <Frame x:Name="Main" Margin="-17,35,-0.4,0" NavigationUIVisibility="Hidden" Height="1000" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
    


